{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": ["format","lint"],
        "outputs": ["build/**", "lib/**"]
      },
      "lint": {
        "outputs": []
      },
      "format": {
        "outputs": []
      },
      "serve": {
        "outputs": []
      },
      "deploy": {
        "dependsOn": ["build"],
        "outputs": []
      }
    }
  }