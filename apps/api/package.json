    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "npx prisma generate && nest build --webpack",
        "start": "nest start",
        "dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"{src,apps,libs,test}/**/*.ts\"",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate deploy --schema ./prisma/schema.prisma"
    },
