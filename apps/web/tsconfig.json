{
    "compilerOptions": {
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2015",
        "esModuleInterop": true
    },
    "include": ["./src/**/**/**/**/*", "index.d.ts"]
}
